<h2>User info</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:<br>
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label><br>
  <%= f.text_field :name, id:"inputName" %><br>
  <label for="inputImage">Image</label><br>
  <%= f.attachment_field :profile_image %><br>
  <label for="InputIntroduction">Introduction</label><br>
  <%= f.text_area :introduction %><br>
  <%= f.submit "Update User" %>
<% end %>