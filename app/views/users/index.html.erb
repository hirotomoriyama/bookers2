<%= render 'users/list', user: @user %>

<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Users</h1>
<h3>image</h3>
<h3>name</h3>
<% @users.each do |user| %>
  <%= attachment_image_tag user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg" %>
  <%= user.name %>
  <%= link_to "Show", user_path(user), method: :get %>
<% end %>