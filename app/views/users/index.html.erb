<h1>User info</h1>
<div class="profile-container">
  <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br>
  <h3>name <%= current_user.name %></h3><br>
  <h3>introduction <%=current_user.introduction %></h3><br>
    <p>
      <%= link_to edit_user_path(current_user), method: :get do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    </p>
</div>

<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Users</h1>
<h3>image</h3>
<h3>name</h3>
<% @users.each do |user| %>
  <%= attachment_image_tag user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg" %>
  <%= user.name %>
  <%= link_to "Show", user_path(user), method: :get %>
<% end %>