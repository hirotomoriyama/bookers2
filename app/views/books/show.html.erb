<h1>User info</h1>
<div class="profile-container">
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br>
  <h3>name <%= @user.name %></h3><br>
  <h3>introduction <%=@user.introduction %></h3><br>
  <% if @user.id == current_user.id %>
    <p>
      <%= button_to edit_user_path(@user), method: :get do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    </p>
  <% end %>
</div>

<h1>New book</h1>
<%= form_with model: @newbook, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Book detail</h1>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <%= @user.name %>
  <p><%= @book.title %></p>
  <p><%= @book.body %></p>

<% if @book.user == current_user %>
  <%= link_to "Edit", edit_book_path(@book) %>
  <%= link_to "Destroy", book_path(@book), method: :delete, data:{confirm:"本当に消しますか?"} %>
<% end %>